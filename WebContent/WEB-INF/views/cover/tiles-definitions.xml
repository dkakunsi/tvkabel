	</definition>

	<definition name="cover_contact" extends="cover_template">
		<put-attribute name="content" value="/WEB-INF/views/cover/tiles/contact.jsp" />
	</definition>

	<definition name="cover_message" extends="cover_template">
		<put-attribute name="content" value="/WEB-INF/views/cover/tiles/message.jsp" />
	</definition>
