				<put-attribute name="kecamatan_datalist" value="/WEB-INF/views/dashboard/datalists/kecamatan.jsp" />
				<put-attribute name="kelurahan_datalist" value="/WEB-INF/views/dashboard/datalists/kelurahan.jsp" />
			</definition>
